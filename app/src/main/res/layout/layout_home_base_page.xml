<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_base_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#969696"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tab_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/bottom_tab_home_icon_selector"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_tab_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textSize="12sp"
                    android:textColor="@color/bottom_tab_textcolor_selector"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_contact_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/bottom_tab_contact_icon_selector"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_tab_contact_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="养生圈子"
                    android:textSize="12sp"
                    android:textColor="@color/bottom_tab_textcolor_selector"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_discover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_discover_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/bottom_tab_discover_icon_selector"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_tab_discover_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textSize="12sp"
                    android:textColor="@color/bottom_tab_textcolor_selector"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
